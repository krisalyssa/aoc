# code: language=shellscript insertSpaces=true tabSize=2
# shellcheck shell=bash

already_initialized() {
        if [[ -e "years/${AOC_YEAR}/golang/go.mod" ]]; then
                return 0
        else
                return 1
        fi
}
declare -x already_initialized

if [[ -n "${AOC_YEAR}" ]]; then
        export ADDITIONAL_MOUNTS="\
--mount type=volume,src=aoc-go-${AOC_YEAR}-cache,dst=/home/aoc/.cache \
--mount type=volume,src=aoc-go-${AOC_YEAR}-config,dst=/home/aoc/.config \
--mount type=volume,src=aoc-go-${AOC_YEAR}-pkg,dst=/go/pkg \
"
fi
