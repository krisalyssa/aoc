#!/usr/bin/env bash

FILENAME=""
if [[ -n "$1" ]]; then
  FILENAME="$1.clje"
  if [[ ! -r "${FILENAME}" ]]; then
    echo "${FILENAME}: file not found"
  fi
fi

docker run \
  --interactive \
  --tty \
  --rm \
  --name aoc-clojerl \
  --mount type=bind,src=$(pwd),dst=/aoc \
  ghcr.io/craigcottingham/aoc/aoc-clojerl:latest \
  ${FILENAME}
